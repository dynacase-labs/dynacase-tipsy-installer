PACKAGE = @PACKAGE@
VERSION=@VERSION@
utildir=@PUBRULE@
pubdir=@prefix@
appname=lib/@APPNAME@

pages_not_xml=info.xml
pages_not_php=fam2po.php po2js.php

include $(utildir)/PubRule

$(pubdir):
	mkdir -p $@

$(pubdir)/programs: $(pubdir)
	mkdir -p $@

$(pubdir)/programs/tipsy_install: programs/tipsy_install $(pubdir)/programs
	cp $< $@
	chmod a+x $@

$(pubdir)/lib: $(pubdir)
	mkdir -p $@

$(pubdir)/$(appname): $(pubdir)/lib
	mkdir -p $@

$(pubdir)/$(appname)/.htaccess: htaccess $(pubdir)/$(appname)
	cp htaccess $@

publish: $(pubdir)/programs/tipsy_install $(pubdir)/$(appname)/.htaccess

clean:
	rm -f *.*~ config.* Makefile configure info.xml\
		$(PACKAGE)-*-*.webinst\